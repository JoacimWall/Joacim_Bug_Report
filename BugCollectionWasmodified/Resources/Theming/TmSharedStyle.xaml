    </Style>

    <Style x:Key="TmCustomControlDefaultBorderStyle" TargetType="Border">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="1.5" />
        <Setter Property="Stroke" Value="{x:Static tm_theming:AppColors.Gray300Color}" />
